<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/listitem_height">

    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="left|center_vertical"
        android:paddingLeft="30dp"
        android:text="@string/page_register"
        android:textColor="@color/list_font_color"
        android:textSize="@dimen/listitem_font" />

    <EditText
        android:id="@+id/edit"
        android:layout_width="163.33dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16.67dp"
        android:text="@string/page_register"
        android:textColor="@android:color/black"
        android:textSize="@dimen/listitem_font" />

</RelativeLayout>