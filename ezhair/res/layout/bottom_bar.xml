<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/bottom_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:src="@drawable/tabbar_foorter_search" />

    <ImageView
        android:id="@+id/bottom_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:src="@drawable/tabbar_foorter_record" />

    <ImageView
        android:id="@+id/bottom_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:src="@drawable/tabbar_foorter_msg" />

    <ImageView
        android:id="@+id/bottom_04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tabbar_foorter_setup" />

</LinearLayout>