<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/category"
        android:layout_width="180dp"
        android:layout_height="@dimen/listitem_height"
        android:layout_weight="1"
        android:gravity="left|center_vertical"
        android:paddingLeft="30dp"
        android:text="@string/page_register"
        android:textColor="@color/list_font_color"
        android:textSize="@dimen/page_signin_title_font" />

    <LinearLayout
        android:id="@+id/rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/rate_01"
            android:layout_width="@dimen/rate_len"
            android:layout_height="@dimen/rate_len"
            android:src="@drawable/icon_star" />

        <ImageView
            android:id="@+id/rate_02"
            android:layout_width="@dimen/rate_len"
            android:layout_height="@dimen/rate_len"
            android:src="@drawable/icon_star" />

        <ImageView
            android:id="@+id/rate_03"
            android:layout_width="@dimen/rate_len"
            android:layout_height="@dimen/rate_len"
            android:src="@drawable/icon_star" />

        <ImageView
            android:id="@+id/rate_04"
            android:layout_width="@dimen/rate_len"
            android:layout_height="@dimen/rate_len"
            android:src="@drawable/icon_star" />

        <ImageView
            android:id="@+id/rate_05"
            android:layout_width="@dimen/rate_len"
            android:layout_height="@dimen/rate_len"
            android:src="@drawable/icon_star" />

        <ImageView
            android:layout_width="@dimen/page_search_icon_width"
            android:layout_height="@dimen/page_search_icon_height"
            android:layout_marginRight="15dp"
            android:src="@drawable/btn_next" />
    </LinearLayout>

</LinearLayout>