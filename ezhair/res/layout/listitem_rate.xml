<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/category"
        android:layout_width="180dp"
        android:layout_height="@dimen/listitem_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="left|center_vertical"
        android:paddingLeft="30dp"
        android:text="@string/page_register"
        android:textColor="@color/list_font_color"
        android:textSize="@dimen/listitem_font" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="@dimen/page_search_icon_width"
        android:layout_height="@dimen/page_search_icon_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/btn_next" />

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="22dp"
        android:layout_toLeftOf="@id/arrow"
        layout="@layout/rate_view" />

</RelativeLayout>